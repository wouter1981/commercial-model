{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "CommercialModel API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-api",
            "program": "${workspaceFolder}/CommercialModelApi/bin/Debug/net5.0/CommercialModelApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/CommercialModelApi",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Commercial Model CLI - list accounts",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-cli",
            "program": "${workspaceFolder}/CommercialModelCli/bin/Debug/net5.0/CommercialModelCli.dll",
            "args": ["list-accounts"],
            "cwd": "${workspaceFolder}/CommercialModelCli",
            "stopAtEntry": true,
            "console": "internalConsole",
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "Console & API",
            "configurations": [
                "CommercialModel API",
                "Commercial Model CLI - list accounts"
            ]
        }
    ]
}